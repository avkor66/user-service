{{> nav }}

    <div class="row" style="margin-top: 3rem; margin-bottom: 3rem;">
        <div class="col s7 offset-s1">
            <table>
                <thead>
                <tr>
                    <th>Пользователь</th>
                    <th>Email</th>
                    <th>Вид</th>
                    <th>ГОСТ</th>
                    <th>Диаметр</th>
                    <th>Длина</th>
                    <th>Длина резьбы</th>
                    <th>Сталь</th>
                    <th>Количество</th>
                </tr>
                </thead>
                <tbody>
                {{#if carts.length}}
                    {{#each carts}}
                        <tr>
                            <td> Гость: {{guestId}} <br> Сессия: {{sessionId}} <br> Имя: {{#if contact.name}} {{contact.name}} {{else}} не указано {{/if}}  </td>
                            <td> {{contact.email}} </td>
                            <td> {{cart.species}} </td>
                            <td> {{cart.stateStandard}} </td>
                            <td> {{cart.diameter}} </td>
                            <td> {{cart.length}} </td>
                            <td> {{cart.threadLength}} </td>
                            <td> {{cart.steelGrade}} </td>
                            <td> {{cart.quantity}} </td>

                        </tr>

                    {{/each}}

                {{/if}}
                </tbody>
            </table>
          </div>


        <div class="col s3 right right-align">
            <div class="card z-depth-0">
                <ul class="collapsible">
                    <li>
                        <div class="collapsible-header">
                            CURRENT ADMINISTRATOR
                        </div>
                    </li>
                    <li>
                        <div class="collapsible-header">
                            Full name
                            <span class="badge">{{admin.fullName}}</span>
                        </div>
                    </li>
                    <li>
                        <div class="collapsible-header">
                            Date of birth
                            <span class="badge">{{admin.birthDate}}</span>
                        </div>
                    </li>
                    <li>
                        <div class="collapsible-header">
                            Email
                            <span class="badge">{{admin.email}}</span>
                        </div>
                    </li>
                    <li>
                        <div class="collapsible-header">
                            Role
                            <span class="badge">{{admin.role}}</span>
                        </div>
                    </li>
                    <li>
                        <div class="collapsible-header">
                            Active
                            {{#if admin.isActive}}
                                <span class="badge green-text">Yes</span>
                            {{else}}
                                <span class="badge red-text">No</span>
                            {{/if}}
                        </div>
                    </li>
                    <li>
                        <div class="collapsible-header">
                            Registration
                            <span class="badge">{{admin.createdAt}}</span>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </div>


